<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_a"
    android:columnCount="1"
    tools:context="com.ademarfamiftahulhidayah202102314.login.MenuActivity">

    <Button
        android:id="@+id/btnForex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/img_dollar_128"
        android:text="Forex"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnMahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/student"
        android:text="Master Mahasiswa"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnCuaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/img_weather_lightning_128"
        android:text="Cuaca"
        android:textColor="#fff" />

</GridLayout>